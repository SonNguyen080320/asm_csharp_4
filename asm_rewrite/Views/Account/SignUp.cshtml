@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AccountLayout";
}

<a asp-controller="home" asp-action="index">Quay lại trang chủ</a>


<h2 class="text-center font-weight-bold mb-4">Đăng ký</h2>

<form>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="lastName">Họ</label>
                <input type="text" class="form-control" id="lastName">
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="firstName">Tên</label>
                <input type="text" class="form-control" id="firstName">
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="email">Số điện thoại *</label>
        <input type="email" class="form-control" id="email" required>
    </div>

    <div class="form-group">
        <label for="email">Email *</label>
        <input type="email" class="form-control" id="email" required>
    </div>

    <div class="form-group">
        <label for="password">Mật khẩu *</label>
        <input type="password" class="form-control" id="password" required>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary w-75 py-2">Đăng ký</button>
    </div>

    <div class="text-center my-3 text-secondary font-italic">-hoặc-</div>

    <div class="text-center">Đã có tài khoản ? <a asp-controller="account" asp-action="signIn">Đăng nhập</a></div>
</form>
