@model asm_rewrite.Models.SignIn

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_AccountLayout";

    var alert = TempData["sign-up__alert--success"];
}

@if (ViewData.ModelState["CustomSignInError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var item in ViewData.ModelState["CustomSignInError"].Errors)
        {
            <div>@item.ErrorMessage</div>
        }
    </div>
}

<div>
    @Html.Raw(TempData["sign-up__alert--success"])
</div>

<a asp-controller="product" asp-action="home">Quay lại trang chủ</a>

<h2 class="text-center font-weight-bold mb-4">Đăng nhập</h2>

<form asp-controller="account" asp-action="signIn" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Email">Email *</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Nhập Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Mật khẩu *</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Nhập mật khẩu">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary w-75 py-2">Đăng nhập</button>
    </div>

    <div class="text-center my-3 text-secondary font-italic">-hoặc-</div>

    <div class="text-center">Chưa có tài khoản ? <a asp-controller="account" asp-action="signUp">Đăng ký</a></div>
</form>